.zi-tooltip
  position relative
  width max-content
  text-align center
  align-items center
  justify-content center

.zi-tooltip-box
  visibility hidden
  opacity 0
  position absolute
  background-color var(--geist-foreground)
  border-radius var(--geist-radius)
  color var(--geist-background)
  padding .5rem .75rem
  font-size .75rem
  box-shadow rgba(0, 0, 0, 0.12) 0px 5px 40px 0px
  font-weight normal
  text-align center
  z-index 2000

  &.visible
    visibility visible
    opacity 1

.zi-tooltip-box[x-placement^=bottom] .zi-tooltip-arrow
  border-width 0 6px 6px 6px
  top -6px
  margin-top 0
  margin-bottom 0
  border-left-color transparent
  border-right-color transparent
  border-top-color transparent

.zi-tooltip-box[x-placement^=top] .zi-tooltip-arrow
  border-width 6px 6px 0 6px
  border-left-color transparent
  border-right-color transparent
  border-bottom-color transparent
  bottom -6px
  left calc(50% - 6px)
  margin-top 0
  margin-bottom 0

.zi-tooltip-box[x-placement^=left] .zi-tooltip-arrow
  border-width 6px 0 6px 6px
  border-top-color transparent
  border-right-color transparent
  border-bottom-color transparent
  right -6px
  top calc(50% - 6px)
  margin-left 0
  margin-right 0

.zi-tooltip-box[x-placement^=right] .zi-tooltip-arrow
  border-width 6px 6px 6px 0
  border-left-color transparent
  border-top-color transparent
  border-bottom-color transparent
  left -6px
  top calc(50% - 6px)
  margin-left 0
  margin-right 0

.zi-tooltip-arrow
  width 0
  height 0
  border-style solid
  position absolute
  margin 5px
  border-color var(--geist-foreground)

.zi-tooltip-inner
  width: max-content

  p
    margin 0
