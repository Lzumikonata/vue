.zi-display
  margin rem(40) 0
  display flex
  justify-content center
  flex-wrap wrap

  .zi-display-content
    border-radius var(--geist-radius)
    max-width 100%
    margin 0 auto
    overflow hidden

    &.shadow
      box-shadow var(--shadow-large)

  .zi-display-caption
    color var(--accents-5)
    margin rem(40) auto 0
    text-align center
    font-size rem(14)
    width 85%
    line-height rem(21)
